<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/a8_goToChatButton"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:background="@drawable/my_button_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a8_chatUserRowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Row Text"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/a8_goToChatButton"
        app:layout_constraintEnd_toEndOf="@+id/a8_goToChatButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/a8_goToChatButton" />

</androidx.constraintlayout.widget.ConstraintLayout>