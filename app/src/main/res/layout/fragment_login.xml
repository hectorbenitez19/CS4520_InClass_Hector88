<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a8_fragmentLogin_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InClass08.FragmentLogin">

    <EditText
        android:id="@+id/a8_fragLogin_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/a8_fragLogin_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/a8_fragLogin_username"
        app:layout_constraintStart_toStartOf="@+id/a8_fragLogin_username"
        app:layout_constraintTop_toBottomOf="@+id/a8_fragLogin_username" />

    <Button
        android:id="@+id/a8_fragLogin_loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/a8_fragLogin_password"
        app:layout_constraintStart_toStartOf="@+id/a8_fragLogin_password"
        app:layout_constraintTop_toBottomOf="@+id/a8_fragLogin_password" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="New User? Create An Account."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/a8_fragLogin_loginButton"
        app:layout_constraintStart_toStartOf="@+id/a8_fragLogin_loginButton"
        app:layout_constraintTop_toBottomOf="@+id/a8_fragLogin_loginButton" />

    <Button
        android:id="@+id/a8_fragLogin_CreateAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="#3E8B95"
        android:text="Create Account"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/a8_testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a8_fragLogin_CreateAccountButton" />
</androidx.constraintlayout.widget.ConstraintLayout>